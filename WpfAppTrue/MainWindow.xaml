<Window x:Class="WpfAppTrue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTrue"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid  Background="#60B9CE">
        <StackPanel VerticalAlignment="Center">
            <TextBox x:Name="loginTb" Width="250" Style="{StaticResource AuthTbx}" Margin="0 10" Height="40"/>
            <TextBox x:Name="passwordPb" Width="250" Style="{StaticResource AuthTbx}" Margin="0 0 0 10" Height="40"/>
            <Button Width="50" Content="Войти" Click="SignIn" Style="{StaticResource ActionBtn}" Margin="0 0 0 10" Height="40"/>
            <CheckBox IsChecked="True" x:Name="rememberChb" Content="Запомни меня" HorizontalAlignment="Center" FontFamily="Cascadia Code SemiBold" Foreground="#206676" FontSize="18"/>
        </StackPanel>
    </Grid>
</Window>
